<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#855E53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#855E53"
        android:contentDescription="Voltar"
        android:src="@drawable/outline_arrow_back_24"
        app:layout_constraintStart_toStartOf="@id/view_header"
        app:layout_constraintTop_toTopOf="@id/view_header"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cappuccino"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@id/view_header"
        app:layout_constraintEnd_toEndOf="@id/view_header"
        app:layout_constraintStart_toStartOf="@id/view_header"
        app:layout_constraintTop_toTopOf="@id/view_header" />

    <ImageView
        android:id="@+id/imageView_clock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintEnd_toStartOf="@+id/imageView_heart"
        app:layout_constraintStart_toStartOf="@id/view_header"
        app:layout_constraintTop_toBottomOf="@id/view_header"
        app:tint="#855E53" />

    <ImageView
        android:id="@+id/imageView_heart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="@id/view_header"
        app:layout_constraintStart_toEndOf="@id/imageView_clock"
        app:layout_constraintTop_toBottomOf="@id/view_header"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintEnd_toEndOf="@id/imageView_clock"
        app:layout_constraintStart_toStartOf="@id/imageView_clock"
        app:layout_constraintTop_toBottomOf="@id/imageView_clock" />

    <TextView
        android:id="@+id/textView_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54214"
        app:layout_constraintEnd_toEndOf="@id/imageView_heart"
        app:layout_constraintStart_toStartOf="@id/imageView_heart"
        app:layout_constraintTop_toBottomOf="@id/imageView_heart" />

    <View
        android:id="@+id/view_lineHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="18dp"
        android:background="#855E53"
        app:layout_constraintTop_toBottomOf="@id/textView_time" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:text="@string/description"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_lineHorizontal" />

    <TextView
        android:id="@+id/textVIew_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Ingredientes"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_description" />

    <ImageView
        android:id="@+id/imageView_arrowright_one"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textVIew_subtitle"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/textView_list_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 dose expresso"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_arrowright_one"
        app:layout_constraintTop_toTopOf="@id/imageView_arrowright_one" />

    <ImageView
        android:id="@+id/imageView_arrowright_two"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_list_one"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/textView_list_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100ml de leite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_arrowright_two"
        app:layout_constraintTop_toTopOf="@id/imageView_arrowright_two" />

    <ImageView
        android:id="@+id/imageView_arrowright_three"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_list_two"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/textView_list_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 colher de chocolate em pÃ³"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_arrowright_three"
        app:layout_constraintTop_toTopOf="@id/imageView_arrowright_three" />
</androidx.constraintlayout.widget.ConstraintLayout>