<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:contentDescription="@string/image_description_main"
        android:src="@drawable/retirement_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center_horizontal"
            android:text="@string/whatsTime"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/choose_sex"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner_sex"
            android:layout_width="152dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="5dp"
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/type_age"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_text_age"
            android:layout_width="152dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:hint="@string/age_text"
            android:textColorHint="#CECECE"
            android:inputType="number" />

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/green_main"
            android:text="@string/calculate"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_light"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>